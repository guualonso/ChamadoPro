<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.chamadopro.controller.AbrirChamadoController"
            style="-fx-padding: 40;">

    <center>
        <VBox spacing="20" alignment="CENTER">
            <Label text="Abrir Novo Chamado"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

            <TextField fx:id="tituloField"
                       promptText="TÃ­tulo do problema"
                       prefWidth="400" prefHeight="40"
                       style="-fx-font-size: 14px;"/>

            <TextArea fx:id="descricaoField"
                      promptText="Descreva o problema..."
                      prefWidth="400" prefHeight="120"
                      style="-fx-font-size: 14px;"/>

            <ComboBox fx:id="comboCategoria"
                      promptText="Categoria do problema"
                      prefWidth="400" prefHeight="40"
                      style="-fx-font-size: 14px;"/>

            <Button text="Abrir Chamado"
                    onAction="#handleAbrirChamado"
                    prefWidth="200" prefHeight="40"
                    style="-fx-font-size: 14px;"/>
        </VBox>
    </center>

</BorderPane>
